<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="@dimen/x1" android:color="@color/gray" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient android:angle="90" android:centerColor="@color/font_4" android:endColor="@color/white" android:gradientRadius="@dimen/x3" android:startColor="@color/white" />
        </shape>
    </item>
</selector>