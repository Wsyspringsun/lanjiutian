<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llHeadr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/zxing"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_saoma"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saoma"
                android:textColor="@color/white"
                android:textSize="8sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x13"
            android:layout_width="0dp"
            android:layout_height="@dimen/x26"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/background_search_edit">

            <TextView
                android:paddingLeft="@dimen/x15"
                android:background="@null"
                android:id="@+id/edHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text="@string/sousuo"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:lines="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/x18"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_sousuo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/right_img"
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_xiaoxi"/>

            <TextView
                android:id="@+id/right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textColor="@color/white"
                android:textSize="8sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>