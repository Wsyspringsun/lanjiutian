<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/jiangpinbeijing" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/item_chojiang_stat"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/zhanweitu" />

        <TextView
            android:id="@+id/item_chojiang_msg"
            style="@style/font_ww_28_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/vertical_margin_lg"
            android:layout_marginTop="@dimen/vertical_margin_lg"
            android:layout_toLeftOf="@id/item_chojiang_stat"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="@string/holder"
            android:textSize="24dp" />


        <TextView
            android:id="@+id/item_chojiang_date"
            style="@style/font_ww_28_white"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/vertical_margin_lg"
            android:text="xxxx-xx-xx将过期"
            android:textSize="@dimen/font_4" />

        <TextView
            android:id="@+id/item_chojiang_addr"
            style="@style/font_ww_28_white"
            android:layout_width="wrap_content"
            android:layout_above="@id/item_chojiang_date"
            android:layout_marginLeft="@dimen/vertical_margin_lg"
            android:text="@string/holder"
            android:textSize="@dimen/font_4" />

    </RelativeLayout>

</FrameLayout>

