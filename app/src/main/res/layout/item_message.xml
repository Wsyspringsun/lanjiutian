<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x55"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_message_msg_type_img"
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/x30"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/vertical_margin_lg"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_xitongxiaoxi" />

    <TextView
        android:id="@+id/fragment_message_msg_title"
        style="@style/font_ww_14"
        android:layout_marginLeft="@dimen/x12"
        android:layout_marginTop="@dimen/x10"
        android:layout_toRightOf="@+id/fragment_message_msg_type_img"
        android:text="@string/message_type1"
        android:textColor="@color/font_black2" />

    <TextView
        android:id="@+id/fragment_message_msg_content"
        style="@style/font_ww_12"
        android:layout_alignBottom="@+id/fragment_message_msg_type_img"
        android:layout_alignLeft="@id/fragment_message_msg_title"
        android:layout_marginRight="@dimen/x10"
        android:layout_toLeftOf="@+id/fragment_message_msg_time"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="点击查看您与客服的沟通记录"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/fragment_message_msg_time"
        style="@style/font_ww_14"
        android:layout_alignBottom="@id/fragment_message_msg_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:textColor="@color/gray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_alignParentBottom="true"
        android:background="@color/basebackground" />

</RelativeLayout>