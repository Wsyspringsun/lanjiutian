<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/basebackground">

    <include layout="@layout/main_header_return_red"/>

    <LinearLayout
        android:id="@+id/fenlei"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:scaleType="fitCenter"
            android:src="@mipmap/yiyao_fenlei"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">

            <TextView
                style="@style/font_ww_16"
                android:textColor="@color/font_black2"
                android:text="分类找药"/>

            <TextView
                android:layout_marginTop="@dimen/x6"
                android:textColor="@color/gray"
                style="@style/font_ww_14"
                android:text="中成药、注射剂、家庭常用、保健品类......"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x2"
        android:id="@+id/buwei"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:scaleType="fitCenter"
            android:src="@mipmap/yiyao_buwei"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="vertical">

            <TextView
                style="@style/font_ww_16"
                android:textColor="@color/font_black2"
                android:text="按部位找药"/>

            <TextView
                android:layout_marginTop="@dimen/x6"
                android:textColor="@color/gray"
                style="@style/font_ww_14"
                android:text="头部、腿部、皮肤、胸部......"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>