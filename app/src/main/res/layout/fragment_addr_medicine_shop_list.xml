<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding1"
            android:paddingTop="@dimen/padding1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/vertical_margin"
                android:layout_weight="1"
                android:text="@string/shop_load_more"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/fragment_addr_medicine_shop_list_btn_quxiao"
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/vertical_margin_lg"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_chahao" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_addr_medicine_shop_list_ryv_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/vertical_margin"
            android:layout_weight="1"></android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/fragment_addr_medicine_shop_list_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x28"
            android:layout_marginBottom="@dimen/x1"
            android:background="@drawable/background_submit"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_5" />

    </LinearLayout>


</RelativeLayout>
