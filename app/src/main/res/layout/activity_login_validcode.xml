<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/vertical_margin_lg"
        android:scaleType="fitXY"
        android:src="@mipmap/denglubeijing" />

    <ImageView
        android:id="@+id/activity_login_validcode_guanbi"
        android:layout_width="@dimen/x18"
        android:layout_height="@dimen/x18"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x15"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_chahao" />

    <LinearLayout
        android:id="@+id/activity_login_validcode_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_below="@+id/activity_login_validcode_guanbi"
        android:layout_marginTop="@dimen/x135"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/font_ww_14"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/phone_number"
            android:textColor="@color/font_black1" />

        <EditText
            android:id="@+id/activity_login_validcode_ed_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@null"
            android:hint="@string/phone_number1"
            android:inputType="phone"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@+id/activity_login_validcode_zhanghao"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/basebackground" />

    <LinearLayout
        android:id="@+id/activity_login_validcode_mima"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_below="@+id/activity_login_validcode_zhanghao"
        android:layout_marginTop="@dimen/x5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/font_ww_14"
            android:layout_marginLeft="@dimen/x10"
            android:text="@string/yanzhengma1"
            android:textColor="@color/font_black1" />

        <EditText
            android:id="@+id/activity_login_validcode_ed_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/yanzhengma2"
            android:inputType="number"
            android:maxLines="1"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_login_validcode_getcode"
            android:layout_width="@dimen/x80"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_button"
            android:gravity="center"
            android:padding="@dimen/padding1"
            android:text="@string/yanzhengma_huoqu"
            android:textColor="@color/light2dark" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@+id/activity_login_validcode_mima"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/basebackground" />

    <Button
        android:id="@+id/activity_login_validcode_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_below="@+id/activity_login_validcode_mima"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x35"
        android:background="@drawable/background_submit_yuan_lan"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <include layout="@layout/fragment_login_styles" />

</RelativeLayout>