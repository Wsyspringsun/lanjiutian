<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wyw.ljtds.widget.MyScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                app:canLoop="true">

            </com.bigkoo.convenientbanner.ConvenientBanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_zhaoyao" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button1"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_nanxing" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button2"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_nvxing" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button3"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button4"
                            android:textColor="@color/font_black2" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_manxingbing" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yingyangbaojian" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button5"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yiliaoqixie" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button6"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_chenren" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button7"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yishengzixun" />

                        <TextView
                            style="@style/font_ww_14"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button8"
                            android:textColor="@color/font_black2" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x8"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_submit_yuan"
                    android:gravity="center"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:text="@string/gonggao_find"
                    android:textColor="@color/white" />

                <com.sunfusheng.marqueeview.MarqueeView
                    android:id="@+id/marqueeView"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x35"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x2"
                    android:layout_weight="1"
                    app:mvAnimDuration="1000"
                    app:mvInterval="3000"
                    app:mvSingleLine="true"
                    app:mvTextColor="@color/font_black2"
                    app:mvTextSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/gray1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x8">

                <TextView
                    android:id="@+id/tv_djs"
                    style="@style/font_ww_16"
                    android:layout_centerVertical="true"
                    android:text="@string/yiqiqiang"
                    android:textColor="@color/base_bar" />

                <!--<com.wyw.ljtds.widget.SnapUpCountDownTimerView-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toRightOf="@+id/tv_djs"-->
                <!--android:layout_marginLeft="@dimen/x10"-->
                <!--android:id="@+id/RushBuyCountDownTimerView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:viewSize="15">-->

                <!--</com.wyw.ljtds.widget.SnapUpCountDownTimerView>-->

                <ImageView
                    android:id="@+id/jt_djs"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jiantou_you_hui" />

                <TextView
                    android:id="@+id/tv_jt_djs"
                    style="@style/font_ww_14"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@id/jt_djs"
                    android:text="@string/gengduo"
                    android:textColor="@color/gray" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/qianggou_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_head_img1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:layout_marginTop="@dimen/x10"
                fresco:fadeDuration="400"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo" >
            </com.facebook.drawee.view.SimpleDraweeView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/sel_yigan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_yigan" />
                </RelativeLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground" />

                <RelativeLayout
                    android:id="@+id/sel_yangwei"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/x10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_yangwei" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="@color/basebackground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/sel_fengshi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x5"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_fengshi" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground" />

                <LinearLayout
                    android:id="@+id/sel_yiyu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x5"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_yiyu" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground" />

                <LinearLayout
                    android:id="@+id/sel_tuofa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x5"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_tuofa" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground" />

                <LinearLayout
                    android:id="@+id/sel_xiaochuan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/x5"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_qf_xiaochuan" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="@color/basebackground" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/basebackground"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10">

                <LinearLayout
                    android:id="@+id/tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/font_ww_14"
                        android:text="好货推荐"
                        android:textColor="@color/font_black2" />

                    <TextView
                        style="@style/font_ww_14"
                        android:text="RECOMMEND"
                        android:textColor="@color/gray" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_toLeftOf="@+id/tuijian"
                    android:background="@color/gray1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_toRightOf="@+id/tuijian"
                    android:background="@color/gray1" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reclcyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/reclcyer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x8"
                android:layout_marginTop="@dimen/x3">

            </android.support.v7.widget.RecyclerView>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_head_img2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:layout_marginTop="@dimen/x10"
                fresco:fadeDuration="400"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_head_img3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:layout_marginTop="@dimen/x2"
                fresco:fadeDuration="400"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo" />


        </LinearLayout>

    </com.wyw.ljtds.widget.MyScrollView>

    <!--android:fitsSystemWindows="true"表示不占用系统栏的位置-->
    <LinearLayout
        android:id="@+id/llHeadr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/main_header_search" />

    </LinearLayout>


</RelativeLayout>