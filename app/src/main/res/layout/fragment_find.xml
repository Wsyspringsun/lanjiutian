            </com.bigkoo.convenientbanner.ConvenientBanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_zhaoyao" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_nanxing" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button2" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_nvxing" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button3" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button4" />

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_manxingbing"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/imageView" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/button5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yingyangbaojian" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button5" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yiliaoqixie" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button6" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_chenren" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button7" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/button8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x40"
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_find_yishengzixun" />

                        <TextView
                            style="@style/font_ww_14"
                            android:textColor="@color/font_black2"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/find_button8" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x8"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x6">

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/background_submit_yuan"
                    android:text="@string/gonggao_find"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"/>

                <com.sunfusheng.marqueeview.MarqueeView
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x2"
                    android:id="@+id/marqueeView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/x35"
                    app:mvAnimDuration="1000"
                    app:mvInterval="3000"
                    app:mvTextColor="@color/font_black2"
                    app:mvTextSize="14sp"
                    app:mvSingleLine="true"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/gray1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x8">

                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/tv_djs"
                    style="@style/font_ww_16"
                    android:text="@string/yiqiqiang"
                    android:textColor="@color/base_bar"/>

                <!--<com.wyw.ljtds.widget.SnapUpCountDownTimerView-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_toRightOf="@+id/tv_djs"-->
                    <!--android:layout_marginLeft="@dimen/x10"-->
                    <!--android:id="@+id/RushBuyCountDownTimerView"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:viewSize="15">-->

                <!--</com.wyw.ljtds.widget.SnapUpCountDownTimerView>-->
                
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x10"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jiantou_you_hui"
                    android:id="@+id/jt_djs"/>

                <TextView
                    android:textColor="@color/gray"
                    android:layout_centerVertical="true"
                    style="@style/font_ww_14"
                    android:text="@string/gengduo"
                    android:layout_toLeftOf="@+id/jt_djs"
                    android:layout_marginRight="@dimen/x5"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qianggou_rv"/>
            
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/x10"
                android:layout_height="@dimen/x140"
                android:layout_width="match_parent"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo"
                fresco:fadeDuration="400"
                fresco:failureImageScaleType="centerInside"
                android:id="@+id/sdv_head_img1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/gray1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:orientation="horizontal">

                <RelativeLayout
                    android:padding="@dimen/x10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yigan"/>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">

                        <TextView
                            android:textColor="@color/font_black2"
                            style="@style/font_ww_14"
                            android:text="乙肝"/>

                        <TextView
                            android:layout_marginTop="@dimen/x4"
                            style="@style/font_ww_12"
                            android:text="关爱乙肝患者"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground" />

                <RelativeLayout
                    android:padding="@dimen/x10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/fengshi"/>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right">

                        <TextView
                            android:textColor="@color/font_black2"
                            style="@style/font_ww_14"
                            android:text="风湿"/>

                        <TextView
                            android:layout_marginTop="@dimen/x4"
                            style="@style/font_ww_12"
                            android:text="关爱风湿患者"
                            android:textColor="@color/gray"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="@color/basebackground"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x75"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    
                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/font_black2"
                        android:text="抑郁症"/>
                    
                    <ImageView
                        android:layout_marginTop="@dimen/x5"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yiyuzheng"/>
                    
                </LinearLayout>
                
                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/font_black2"
                        android:text="抑郁症"/>

                    <ImageView
                        android:layout_marginTop="@dimen/x5"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yiyuzheng"/>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/font_black2"
                        android:text="抑郁症"/>

                    <ImageView
                        android:layout_marginTop="@dimen/x5"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yiyuzheng"/>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:background="@color/basebackground"/>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/font_black2"
                        android:text="抑郁症"/>

                    <ImageView
                        android:layout_marginTop="@dimen/x5"
                        android:layout_width="@dimen/x45"
                        android:layout_height="@dimen/x45"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/yiyuzheng"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="@color/basebackground"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/x10"
                android:layout_height="@dimen/x140"
                android:layout_width="match_parent"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo"
                fresco:fadeDuration="400"
                fresco:failureImageScaleType="centerInside"
                android:id="@+id/sdv_head_img2"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginTop="@dimen/x2"
                android:layout_height="@dimen/x140"
                android:layout_width="match_parent"
                fresco:failureImage="@mipmap/zhanweitu_lunbo"
                fresco:placeholderImage="@mipmap/zhanweitu_lunbo"
                fresco:fadeDuration="400"
                fresco:failureImageScaleType="centerInside"
                android:id="@+id/sdv_head_img3"/>

            <RelativeLayout
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/basebackground">

                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    
                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/font_black2"
                        android:text="好货推荐"/>

                    <TextView
                        style="@style/font_ww_14"
                        android:textColor="@color/gray"
                        android:text="RECOMMEND"/>
                    
                </LinearLayout>
                
                <View
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tuijian"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray1"/>

                <View
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tuijian"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray1"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reclcyer">

            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="@dimen/x3"
                android:layout_marginBottom="@dimen/x8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reclcyer1">

            </android.support.v7.widget.RecyclerView>



        </LinearLayout>

    </com.wyw.ljtds.widget.MyScrollView>

    <!--android:fitsSystemWindows="true"表示不占用系统栏的位置-->
    <LinearLayout
        android:id="@+id/llHeadr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/main_header_search" />

    </LinearLayout>


</RelativeLayout>