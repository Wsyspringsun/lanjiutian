<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/basebackground">

    <include layout="@layout/main_header_return_red"/>

    <RelativeLayout
        android:id="@+id/mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/button_select_color"
        android:clickable="true"
        android:padding="@dimen/x10">

        <TextView
            style="@style/font_ww_14"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/font_black2"/>

        <ImageView
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/jiantou_you_hui"/>

    </RelativeLayout>

</LinearLayout>