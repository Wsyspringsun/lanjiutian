<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/main_header_return_red"></include>

    <LinearLayout
        android:id="@+id/banben"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x93"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/banben1"
            android:layout_marginTop="@dimen/x23"
            style="@style/font_ww_16"
            android:textColor="@color/font_black2"/>

        <TextView
            android:layout_marginTop="@dimen/x12"
            style="@style/font_ww_16"
            android:text="当前版本"
            android:textColor="@color/font_black2" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_gengxin"
        android:layout_below="@+id/banben"
        android:layout_marginTop="@dimen/x31"
        android:layout_marginLeft="@dimen/x10"
        style="@style/font_ww_14"
        android:text="更新版本"
        android:textColor="@color/font_black2"/>

    <RelativeLayout
        android:id="@+id/update"
        android:layout_marginTop="@dimen/x15"
        android:layout_below="@+id/text_gengxin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@drawable/background_text_button_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gengxin_name"
            android:layout_marginLeft="@dimen/x10"
            style="@style/font_ww_14"
            android:textColor="@color/gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/gengxin_flg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            style="@style/font_ww_14"
            android:layout_marginRight="@dimen/x10"
            android:textColor="@color/font_black2"/>

    </RelativeLayout>

</RelativeLayout>