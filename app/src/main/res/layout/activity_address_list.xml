<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header">

        <include layout="@layout/main_header_return"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/header"
        android:layout_above="@+id/tianjia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_address_list_rv_addrlist">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tianjia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:background="@drawable/background_submit"
        android:layout_alignParentBottom="true"
        android:text="@string/address_add"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"/>

</RelativeLayout>