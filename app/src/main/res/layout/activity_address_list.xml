<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basebackground"
    android:orientation="vertical">

    <include android:id="@+id/activity_address_list_head" layout="@layout/fragment_toolbar_common"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_address_list_rv_addrlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_address_list_tv_tianjia"
        android:layout_below="@+id/activity_address_list_head">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/activity_address_list_tv_tianjia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_border"
        android:gravity="center"
        android:padding="@dimen/normal_padding"
        android:text="@string/address_add"
        android:textColor="@color/blue"
        android:textSize="16sp" />

</RelativeLayout>