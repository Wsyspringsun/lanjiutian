<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x100"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/x3">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        app:cardCornerRadius="8sp"
        app:cardElevation="@dimen/x2"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="@dimen/padding1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/head_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                fresco:failureImage="@mipmap/zhanweitu"
                fresco:failureImageScaleType="centerInside"
                fresco:placeholderImage="@mipmap/zhanweitu" />

            <ImageView
                android:id="@+id/fragment_find_huodong_logo_jifen"
                android:layout_width="@dimen/x20"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_huodong_jifen"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/fragment_find_huodong_logo_tejia"
                android:layout_width="@dimen/x20"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_huodong_te"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/fragment_find_huodong_logo_manzeng"
                android:layout_width="@dimen/x20"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_huodong_zeng"
                android:visibility="gone" />


        </FrameLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vertical_margin_mid"
        android:layout_marginTop="@dimen/vertical_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/font_black2"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/money"
        style="@style/font_ww_14"
        android:layout_marginLeft="@dimen/vertical_margin_mid"
        android:layout_marginTop="@dimen/vertical_margin"
        android:textColor="@color/base_bar" />

</LinearLayout>