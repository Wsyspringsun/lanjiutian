<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/basebackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_header_return_red"/>

    <TextView
        android:id="@+id/shoujihao"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x20"
        style="@style/font_ww_12" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x8">

        <TextView
            android:background="@color/white"
            android:paddingLeft="@dimen/x10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/yanzhengma1"
            android:textColor="@color/font_black1"/>

        <EditText
            android:maxLines="1"
            android:id="@+id/code"
            android:inputType="number"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x2"
            android:hint="@string/yanzhengma2"/>

        <Button
            android:id="@+id/fasong"
            android:background="@drawable/background_submit_yuan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x2">

        <TextView
            android:background="@color/white"
            android:paddingLeft="@dimen/x10"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:text="@string/shezhimima"
            android:textColor="@color/font_black1"/>

        <EditText
            android:maxLines="1"
            android:id="@+id/mima"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x2"
            android:hint="@string/password_valid"/>

    </LinearLayout>

    <Button
        android:id="@+id/next"
        android:textSize="18sp"
        android:text="@string/regist"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:background="@drawable/background_submit_yuan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x15"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/chk_agree_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>

        <TextView
            android:id="@+id/zhuce_text"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x6"
            style="@style/font_ww_14"
            android:text="@string/zhucetiaoli"/>

    </LinearLayout>

</LinearLayout>