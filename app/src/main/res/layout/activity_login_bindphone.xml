<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_login_bindphone_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="10dp">

        <ImageView
            android:id="@+id/toolbar_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_previous_black" />

        <TextView
            style="@style/mToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/login_bindphone_title" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/vertical_margin">

        <LinearLayout
            android:id="@+id/activity_login_bindphone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding3"
            android:paddingRight="@dimen/padding3">

            <LinearLayout
                android:id="@+id/activity_login_bindphone_zhanghao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_ww_14"
                    android:text="@string/phone_number"
                    android:textColor="@color/font_black1" />

                <EditText
                    android:id="@+id/activity_login_bindphone_ed_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:background="@null"
                    android:hint="@string/phone_number1"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/basebackground" />

            <LinearLayout
                android:id="@+id/activity_login_bindphone_mima"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_below="@+id/activity_login_bindphone_zhanghao"
                android:layout_marginTop="@dimen/x5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/font_ww_14"
                    android:text="@string/yanzhengma1"
                    android:textColor="@color/font_black1" />

                <EditText
                    android:id="@+id/activity_login_bindphone_ed_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/yanzhengma2"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/activity_login_bindphone_getcode"
                    android:layout_width="@dimen/x80"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_text_button"
                    android:gravity="center"
                    android:padding="@dimen/padding1"
                    android:text="@string/yanzhengma_huoqu"
                    android:textColor="@color/light2dark" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/activity_login_bindphone_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:layout_below="@+id/activity_login_bindphone_ll"
            android:layout_marginLeft="@dimen/padding3"
            android:layout_marginRight="@dimen/padding3"
            android:layout_marginTop="@dimen/x35"
            android:background="@drawable/background_submit_yuan_lan"
            android:text="@string/login_bindphone"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>