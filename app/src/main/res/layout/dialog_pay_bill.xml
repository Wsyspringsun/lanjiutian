<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/basebackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/main_header_return"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/x10"
            android:paddingBottom="@dimen/x8"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/peisong"
                style="@style/font_ww_14"
                android:text="@string/peisong"
                android:textColor="@color/font_black2"/>

            <RadioGroup
                android:id="@+id/peisong_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/peisong"
                android:layout_marginTop="@dimen/x6"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/peisong_rb1"
                    android:layout_width="@dimen/x64"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_btn_order"
                    android:textColor="@color/select_btn_order_text"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:text="@string/peisong1"
                    android:textSize="14sp"/>

                <RadioButton
                    android:background="@drawable/select_btn_order"
                    android:textColor="@color/select_btn_order_text"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:layout_width="@dimen/x64"
                    android:id="@+id/peisong_rb2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="@string/peisong2"
                    android:textSize="14sp"/>

            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/x10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/x10"
            android:paddingBottom="@dimen/x8"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/fapiao"
                style="@style/font_ww_14"
                android:text="@string/fapiao_xuanze"
                android:textColor="@color/font_black2"/>

            <RadioGroup
                android:id="@+id/fapiao_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fapiao"
                android:layout_marginTop="@dimen/x6"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:checked="true"
                    android:background="@drawable/select_btn_order"
                    android:textColor="@color/select_btn_order_text"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:layout_width="@dimen/x64"
                    android:id="@+id/fapiao_rb1"
                    android:layout_height="wrap_content"
                    android:text="@string/fapiao_no"
                    android:textSize="14sp"/>

                <RadioButton
                    android:background="@drawable/select_btn_order"
                    android:textColor="@color/select_btn_order_text"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="@dimen/x5"
                    android:layout_width="@dimen/x64"
                    android:id="@+id/fapiao_rb2"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="@string/fapiao_yes"
                    android:textSize="14sp"/>

            </RadioGroup>

        </RelativeLayout>

        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/xiangqing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

