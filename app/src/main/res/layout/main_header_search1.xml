<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeadr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:background="@color/base_bar"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginLeft="@dimen/x10"
            android:scaleType="fitCenter"
            android:src="@mipmap/jiantou_zuo_bai" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x26"
            android:layout_marginLeft="@dimen/x13"
            android:layout_marginRight="@dimen/x8"
            android:layout_weight="1"
            android:background="@drawable/background_search_edit"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edHeader"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@null"
                android:gravity="center_vertical"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lines="1"
                android:hint="输入关键字"
                android:paddingLeft="@dimen/x15"
                android:singleLine="true"
                android:textColor="@color/font_0"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/search_img"
                android:layout_width="0dp"
                android:layout_height="@dimen/x18"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_sousuo" />

        </LinearLayout>

        <TextView
            android:id="@+id/search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x5"
            android:gravity="center"
            android:padding="@dimen/x5"
            android:text="@string/title_search"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>