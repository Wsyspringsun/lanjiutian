<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x55"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/balance_item_addmoney_notes"
        android:paddingLeft="@dimen/x5"
        android:paddingTop="@dimen/x5"
        style="@style/font_ww_14"
        android:layout_alignParentLeft="true"
        android:textColor="@color/font_black2" />

    <TextView
        android:id="@+id/balance_item_cardinvalidate"
        android:layout_width="wrap_content"
        style="@style/font_ww_12"
        android:paddingLeft="@dimen/x5"
        android:paddingTop="@dimen/x5"
        android:layout_alignLeft="@id/balance_item_addmoney_notes"
        android:layout_below="@id/balance_item_addmoney_notes"
        android:maxLines="1"
        android:text="9999-01-01 00:00:00"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/balance_item_addmoney_cardbalance"
        style="@style/font_ww_14"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="@dimen/x20"
        android:padding="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        android:textColor="@color/font_black2" />

    <TextView
        android:id="@+id/balance_item_addamount"
        style="@style/font_ww_14"
        android:gravity="right"
        android:layout_toLeftOf="@id/balance_item_addmoney_cardbalance"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/x10"
        android:padding="@dimen/x5"
        android:textColor="@color/font_black2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_alignParentBottom="true"
        android:background="@color/basebackground" />


</RelativeLayout>

