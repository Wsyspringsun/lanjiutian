<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/yindao_2"/>

    <TextView
        android:id="@+id/welcome_start"
        android:layout_width="@dimen/x150"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x55"
        android:background="@drawable/bg_snap_up_red"
        android:gravity="center"
        android:paddingBottom="@dimen/x5"
        android:paddingLeft="35.0dip"
        android:paddingRight="35.0dip"
        android:paddingTop="@dimen/x5"
        android:text="立即体验"
        android:textColor="@color/base_bar"
        android:textSize="25.0sp"/>


</RelativeLayout>