<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/main_header_search1" />

    <TextView
        style="@style/font_ww_14"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:text="@string/zuijinsousuo"
        android:textColor="@color/font_black2" />

    <com.wyw.ljtds.widget.MyGridView
        android:id="@+id/mgv_nearest_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:horizontalSpacing="@dimen/x12"
        android:numColumns="5"
        android:verticalSpacing="@dimen/x10">

    </com.wyw.ljtds.widget.MyGridView>

    <TextView
        android:id="@+id/tv_nearest_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/x30"
        android:text="@string/zanwusousuo"
        android:textColor="@color/font_black2"
        android:visibility="gone" />

    <TextView
        style="@style/font_ww_14"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:text="@string/cainixihuan"
        android:textColor="@color/font_black2" />

    <com.wyw.ljtds.widget.MyGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:horizontalSpacing="@dimen/x12"
        android:numColumns="5"
        android:verticalSpacing="@dimen/x10">

    </com.wyw.ljtds.widget.MyGridView>

</LinearLayout>