<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_user_index_ordericon_img"
        android:layout_width="@dimen/x24"
        android:layout_height="@dimen/x24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x3"
        android:scaleType="fitXY"
        android:src="@drawable/icon_daifu" />

    <TextView
        android:id="@+id/item_user_index_ordericon_txt"
        style="@style/font_ww_12"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/holder"
        android:textColor="@color/font_black2" />

</LinearLayout>

