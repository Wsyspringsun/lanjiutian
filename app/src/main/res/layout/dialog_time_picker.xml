<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x248"
        android:orientation="vertical"
        android:background="@color/basebackground"
        android:layout_centerInParent="true">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/dp_titlebar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x44"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年份"
                android:textSize="16sp"
                android:textColor="@color/font_black2" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="月"
                android:textSize="16sp"
                android:textColor="@color/font_black2" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="日"
                android:textSize="16sp"
                android:textColor="@color/font_black2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x160"
            android:orientation="horizontal">

            <com.wyw.ljtds.widget.picker.WheelView
                android:id="@+id/wheel_y"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.wyw.ljtds.widget.picker.WheelView
                android:id="@+id/wheel_m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.wyw.ljtds.widget.picker.WheelView
                android:id="@+id/wheel_d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/quxiao"
                android:layout_marginLeft="@dimen/x28"
                style="@style/font_ww_16_black"
                android:text="取消"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/baocun"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x28"
                style="@style/font_ww_16"
                android:text="保存"
                android:textColor="@color/base_bar"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>