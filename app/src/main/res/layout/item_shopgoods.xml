<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/vertical_margin_lg"
    android:background="@color/white"
    android:padding="@dimen/padding1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <ImageView
                android:id="@+id/item_shopgoods_iv_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@mipmap/test_goods" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/vertical_margin_lg"
            android:layout_marginRight="@dimen/vertical_margin_lg"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_shopgoods_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vertical_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="信息\n信息"
                android:textColor="@color/font_black2"
                android:textSize="@dimen/font_6" />


            <TextView
                android:id="@+id/item_shopgoods_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="￥0"
                android:textColor="@color/base_bar"
                android:textSize="@dimen/font_3" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right|bottom"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_gobuy" />

        </FrameLayout>


    </LinearLayout>


</FrameLayout>

