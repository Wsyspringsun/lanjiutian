<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.wyw.ljtds.widget.goodsinfo.SlideDetailsLayout
            android:id="@+id/sv_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/sv_goods_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeff3"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x255"
                        android:background="@color/white">

                        <!-- 自动轮播的第三方控件 -->
                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/vp_item_goods_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            app:canLoop="true"/>
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:alpha="0.4"
                        android:background="@color/gray1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/x3"
                        android:paddingLeft="@dimen/x10"
                        android:paddingTop="@dimen/x6">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:gravity="center_vertical"
                            android:minHeight="@dimen/x35"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingRight="@dimen/x5">

                                <ImageView
                                    android:id="@+id/flag_otc"
                                    android:layout_width="@dimen/x20"
                                    android:layout_height="@dimen/x16"
                                    android:layout_marginRight="@dimen/x2"
                                    android:scaleType="fitCenter"/>

                                <TextView
                                    android:id="@+id/tv_goods_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/flag_otc"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:textColor="@color/font_black2"
                                    android:textSize="15sp"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/goods_changjia"
                                style="@style/font_ww_14"
                                android:layout_below="@+id/tv_goods_title"
                                android:layout_marginTop="@dimen/x3"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/gray"/>

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray1"/>

                        <LinearLayout
                            android:id="@+id/shoucang"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/shoucang_img"
                                android:layout_width="@dimen/x21"
                                android:layout_height="@dimen/x21"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/icon_shoucang_weixuan"/>

                            <TextView
                                style="@style/font_ww_12"
                                android:layout_marginTop="@dimen/x1"
                                android:text="收藏"
                                android:textColor="@color/font_black2"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/goods_shuoming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x4"
                        android:layout_marginTop="@dimen/x4"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="3"
                        android:paddingBottom="@dimen/x5"
                        android:paddingLeft="@dimen/x10"
                        android:paddingRight="@dimen/x10"
                        android:paddingTop="@dimen/x5"
                        android:textColor="@color/font_black2"
                        android:textSize="12sp"
                        android:visibility="gone"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x1"
                        android:alpha="0.4"
                        android:background="@color/gray1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/x10"
                        android:paddingTop="@dimen/x2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x11"
                            android:layout_marginTop="@dimen/x11"
                            android:gravity="bottom"
                            android:minHeight="25dp"
                            android:orientation="horizontal"
                            android:paddingRight="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥"
                                android:textColor="@color/base_bar"
                                android:textSize="14sp"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/tv_new_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x3"
                                android:textColor="@color/base_bar"
                                android:textSize="18sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x8"
                                android:gravity="center_vertical"
                                android:textColor="#888888"
                                android:textSize="13sp"/>


                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="1dp"
                        android:alpha="0.4"
                        android:background="#dddddd"/>

                    <!-- 商品保障图 -->
                    <ImageView
                        android:id="@+id/iv_ensure"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@mipmap/medicine_info"/>

                    <!-- 当前已选的商品 -->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x8"
                        android:alpha="0.4"
                        android:background="@color/basebackground"/>

                    <LinearLayout
                        android:id="@+id/ll_current_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/x12"
                        android:paddingLeft="@dimen/x10"
                        android:paddingTop="@dimen/x12"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/tv_current_goods"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/font_black2"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="@dimen/x12"
                            android:layout_height="@dimen/x12"
                            android:layout_marginRight="@dimen/x10"
                            android:src="@mipmap/jiantou_you_hui"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_current_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/x5"
                            android:paddingTop="@dimen/x7">

                            <View
                                android:layout_width="@dimen/x2"
                                android:layout_height="@dimen/x12"
                                android:layout_marginLeft="@dimen/x2"
                                android:background="@color/base_bar"/>

                            <TextView
                                style="@style/font_ww_14"
                                android:layout_marginLeft="@dimen/x9"
                                android:text="@string/number"
                                android:textColor="@color/font_black2"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:alpha="0.4"
                            android:background="#dddddd"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:padding="@dimen/x7">

                            <TextView
                                android:id="@+id/heji_tv"
                                style="@style/font_ww_14"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x3"
                                android:text="@string/heji1"
                                android:textColor="@color/font_black2"/>

                            <TextView
                                android:id="@+id/goods_heji"
                                style="@style/font_ww_14"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x2"
                                android:layout_toRightOf="@+id/heji_tv"
                                android:textColor="@color/base_bar"/>

                            <com.wyw.ljtds.widget.NumberButton
                                android:id="@+id/number_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                app:editable="true"
                                app:textColor="@color/font_black2">

                            </com.wyw.ljtds.widget.NumberButton>

                        </RelativeLayout>

                    </LinearLayout>


                    <!-- 用户点评 -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x8"
                        android:alpha="0.4"
                        android:background="@color/basebackground"/>

                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用户点评"
                                android:textColor="#222222"
                                android:textSize="13dp"/>

                            <TextView
                                android:id="@+id/tv_goods_info_evaluate_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="(0)"
                                android:textColor="#222222"
                                android:textSize="13dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="好评度"
                                android:textColor="#222222"
                                android:textSize="13dp"/>

                            <TextView
                                android:id="@+id/tv_good_info_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x1"
                                android:text="100%"
                                android:textColor="#ec0f38"
                                android:textSize="13dp"/>

                            <ImageView
                                android:id="@+id/iv_comment_right"
                                android:layout_width="@dimen/x12"
                                android:layout_height="@dimen/x12"
                                android:layout_marginLeft="@dimen/x5"
                                android:src="@mipmap/jiantou_you_hui"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:alpha="0.4"
                        android:background="#dddddd"/>

                    <LinearLayout
                        android:id="@+id/ll_empty_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/x8"
                        android:paddingTop="@dimen/x8"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/no_eva"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/x5"
                            android:text="暂无精华评论"
                            android:textColor="#888888"
                            android:textSize="13dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="blocksDescendants">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/eva_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:overScrollMode="never"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <!-- 小二推荐 -->
                    <!--
                    <LinearLayout
                        android:id="@+id/ll_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="14dp"
                            android:layout_marginTop="14dp"
                            android:text="小二推荐"
                            android:textColor="#222222"
                            android:textSize="13dp"/>

                        <com.bigkoo.convenientbanner.ConvenientBanner
                            android:id="@+id/vp_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="264dp"
                            android:background="#ffffff"
                            app:canLoop="true"/>
                    </LinearLayout>
                    -->

                    <!-- 上拉查看图文详情 -->
                    <LinearLayout
                        android:id="@+id/ll_pull_up"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:clickable="true"
                        android:gravity="center">

                        <!--ImageView
                            android:layout_width="14dp"
                            android:layout_height="9dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/top" /-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="上拉查看图文详情"
                            android:textColor="#222222"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <include layout="@layout/include_item_tab"/>
        </com.wyw.ljtds.widget.goodsinfo.SlideDetailsLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_up_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="30dp"
            android:src="@mipmap/go_top"
            app:backgroundTint="@color/white"
            app:borderWidth="0dp"
            app:fabSize="mini"
            app:rippleColor="@color/white"/>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>