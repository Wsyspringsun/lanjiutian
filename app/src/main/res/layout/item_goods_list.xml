<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x98"
    android:background="@color/white">

    <ImageView
        android:id="@+id/goods_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/x88"
        android:scaleType="fitXY"
        android:src="@mipmap/test_goods"/>

    <TextView
        android:id="@+id/goods_title"
        android:layout_marginRight="@dimen/x10"
        android:layout_toRightOf="@+id/goods_img"
        android:layout_marginLeft="@dimen/x16"
        android:layout_alignTop="@+id/goods_img"
        android:layout_marginTop="@dimen/x6"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/font_black2" />

    <TextView
        android:id="@+id/money"
        style="@style/font_ww_14"
        android:text="@string/meiqian"
        android:layout_alignBottom="@+id/goods_img"
        android:layout_marginBottom="@dimen/x9"
        android:layout_alignLeft="@+id/goods_title"
        android:textColor="@color/base_bar"/>

</RelativeLayout>