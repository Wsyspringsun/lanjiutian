<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/base_bar</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@drawable/ic_nav_previous</item>
        <item name="windowActionBar">false</item>
        <item name="overlapAnchor">false</item>
        <!--toolbar内的控件（自定义的或者系统预置的如标题）距离NavigationIcon和屏幕左边的距离，类似marginStart-->
    </style>

    <!--浅色主题-->
    <style name="AppThemeDark" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>

    <!--通知栏适配app工具栏颜色的主题-->
    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <!--
    设置工具栏样式
    <item name="toolbarNavigationButtonStyle">@style/mToolbarNavigationButtonStyle</item>
    <style name="mToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    -->
    <style name="mToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/font_4</item>
        <item name="textColor">@color/font_1</item>
    </style>

    <style name="Login" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whitesmoke</item>
        <item name="colorPrimaryDark">@color/gray1</item>
        <item name="colorAccent">@color/base_bar</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeSplash" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:background">@mipmap/page_huanying</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>-->
    </style>

    <!--<style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">-->
    <!--<item name="android:textSize">10dp</item>-->
    <!--</style>-->

    <!--微信-->
    <!-- Navigation Header -->

    <!-- Android Style -->

    <style name="MMButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/mm_btn_text</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="MMCheckBox">
        <item name="android:background">@drawable/mm_checkbox_btn</item>
    </style>

    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mm_style_two_btn_text</item>
    </style>

    <!--<style name="MMToolbarButton" parent="@style/MMButton">
        <item name="android:minWidth">45dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">@dimen/SmallerTextSize</item>
        <item name="android:textColor">#2C2C2C</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
-->
    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:background">@drawable/btn_style_one</item>
        <item name="android:textColor">@color/mm_style_one_btn_text</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!-- Font Styles -->

    <style name="MMFontPreferenceProfile" parent="MMFontPreferenceLarge">
        <item name="android:textSize">@dimen/TitleTextSize</item>
    </style>

    <style name="MMFontPreferenceLarge">
        <item name="android:textAppearance">@style/MMPreferenceTextLarge</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MMFontPreferenceSmall">
        <item name="android:textAppearance">@style/MMPreferenceTextSmall</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">#A0FFFFFF</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MMFontPreferenceSummary" parent="MMFontPreferenceSmall">
        <item name="android:textAppearance">@style/MMPreferenceTextSmall</item>
        <item name="android:textSize">@dimen/BasicTextSize</item>
    </style>

    <style name="MMFontEmptyMsgLarge" parent="MMFontPreferenceLarge">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mm_pref_summary</item>
    </style>

    <style name="MMPreferenceTextLarge">
        <item name="android:textSize">@dimen/LargeTextSize</item>
        <item name="android:textColor">@color/mm_pref_title</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MMPreferenceTextSmall">
        <item name="android:textSize">@dimen/SmallTextSize</item>
        <item name="android:textColor">@color/mm_pref_summary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Application Style -->

    <style name="HyperText" parent="MMButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/mm_hyper_text</item>
        <item name="android:textSize">@dimen/BasicTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DataSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
    </style>

    <style name="edtxt_single">
        <item name="android:layout_marginTop">@dimen/x5</item>
        <item name="android:background">@drawable/background_division_line</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/x5</item>
        <item name="android:textColor">@color/font_black2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textview_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/vertical_margin</item>
    </style>
    <!--微信 end-->

    <style name="font_icon_text">
        <item name="android:layout_marginBottom">@dimen/x3</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/x12</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/x8</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="icon_sm">
        <item name="android:layout_width">@dimen/x18</item>
        <item name="android:layout_height">@dimen/x18</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="text_group_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LjtTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:textSize">@dimen/font_6</item>
    </style>

    <!-- 圆形checkbox -->
    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selected</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
