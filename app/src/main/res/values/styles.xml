<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whitesmoke</item>
        <item name="colorPrimaryDark">@color/base_bar</item>
        <item name="colorAccent">@color/base_bar</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Login" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whitesmoke</item>
        <item name="colorPrimaryDark">@color/gray1</item>
        <item name="colorAccent">@color/base_bar</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@mipmap/page_huanying</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
