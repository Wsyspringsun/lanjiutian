<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whitesmoke</item>
        <item name="colorPrimaryDark">@color/base_bar</item>
        <item name="colorAccent">@color/base_bar</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="LabelBlock">
        <item name="android:paddingBottom">@dimen/x5</item>
    </style>

    <style name="TextEditCommon">
        <item name="android:textColor">@color/font_black2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x5</item>
        <item name="android:paddingTop">@dimen/x5</item>
    </style>

    <style name="ConfirmBtn">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/base_bar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/x1</item>
        <item name="android:layout_marginRight">@dimen/x1</item>
        <item name="android:paddingTop">@dimen/x8</item>
        <item name="android:paddingBottom">@dimen/x8</item>
    </style>

    <style name="base_textview">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">12dp</item>
    </style>
</resources>
