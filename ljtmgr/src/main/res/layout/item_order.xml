<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding"
    android:paddingLeft="@dimen/margin2"
    android:paddingRight="@dimen/margin2"
    android:paddingTop="@dimen/padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_order_orderid"
            style="@style/base_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/x2"
            android:text="@string/orderlist_orderid" />

        <TextView
            android:id="@+id/item_order_orderstat"
            style="@style/base_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x2"
            android:text="@string/orderlist_orderstat_unknow" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_order_shuliang"
            style="@style/base_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/orderlist_num" />


        <TextView
            android:id="@+id/item_order_orderprice"
            style="@style/base_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/orderlist_costmoney" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_order_orderinfo"
        style="@style/base_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:text="xxxx-xx-xx xx:xx" />

</LinearLayout>
