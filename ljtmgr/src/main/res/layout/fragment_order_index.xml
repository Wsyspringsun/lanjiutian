<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/user_background" />

        <ImageView
            android:id="@+id/setting"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_setting"/>

        <TextView
            android:id="@+id/shop_title"
            style="@style/font_ww_18"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x15"
            android:text="兰花超市"
            android:textColor="@color/white" />

        <View
            android:id="@+id/dividing"
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/x32"
            android:layout_below="@+id/shop_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x32"
            android:layout_alignTop="@+id/dividing"
            android:layout_marginRight="@dimen/x15"
            android:layout_toLeftOf="@+id/dividing"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="可用金额"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/money_freeze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="222895.12"
                android:textColor="@color/white" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x32"
            android:layout_alignTop="@+id/dividing"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/dividing"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="冻结金额"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/money_avaliable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="12666.12"
                android:textColor="@color/white" />

        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <com.gxz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x33"
            android:textColor="@color/font_black2"
            android:textSize="14sp"
            app:pstsDividerColor="@color/gray1"
            app:pstsIndicatorColor="@color/base_bar"
            app:pstsIndicatorHeight="2dp"
            app:pstsScaleZoomMax="0.1"
            app:pstsShouldExpand="true"
            app:pstsTabPaddingLeftRight="12dp"
            app:pstsTextSelectedColor="@color/base_bar"
            app:pstsUnderlineColor="@color/whitesmoke" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
