<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x2"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/x1"
    app:contentPadding="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/iv_adapter_list_pic"-->
        <!--android:layout_width="@dimen/x67"-->
        <!--android:layout_height="@dimen/x67"-->
        <!--fresco:actualImageScaleType="centerCrop"-->
        <!--fresco:fadeDuration="200"-->
        <!--fresco:failureImage="@mipmap/zhanweitu"-->
        <!--fresco:failureImageScaleType="centerInside"-->
        <!--fresco:placeholderImage="@mipmap/zhanweitu"/>-->

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imagePath"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:padding="@dimen/x3"
            fresco:actualImageScaleType="fitCenter"
            fresco:fadeDuration="200"
            fresco:failureImage="@mipmap/ic_launcher"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="0.72"
            android:orientation="vertical">
            <!--
            <TextView
                android:id="@+id/title"
                style="@style/font_ww_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="蒙牛特仑苏低脂牛奶 低脂优蛋白（规格:250ml*12盒）"
                android:textColor="@color/font_black2" />

            <TextView
                android:id="@+id/money"
                style="@style/font_ww_12"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="数量：2  金额：￥89.00"
                android:textColor="@color/font_black2" />-->
            <TextView
                android:id="@+id/checkListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/text_holder"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/checkListSpecification"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:padding="5dp"
                    android:text="@string/text_holder"
                    android:textColor="#A6A6A6" />

                <TextView
                    android:id="@+id/checkListCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/text_holder" />
            </LinearLayout>

            <TextView
                android:id="@+id/checkListSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:text="@string/text_holder"
                android:textColor="#FF4081" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>