<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#D0D0D0"
                android:endColor="#D0D0D0"
                android:angle="270" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#D0D0D0"
                android:endColor="#D0D0D0"
                android:angle="270" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape>
            <gradient
                android:startColor="#2181F7"
                android:endColor="#2181F7"
                android:angle="0" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>