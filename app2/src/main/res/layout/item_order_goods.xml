<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x2"
    app:cardElevation="@dimen/x1"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:contentPadding="@dimen/x5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/iv_adapter_list_pic"-->
        <!--android:layout_width="@dimen/x67"-->
        <!--android:layout_height="@dimen/x67"-->
        <!--fresco:actualImageScaleType="centerCrop"-->
        <!--fresco:fadeDuration="200"-->
        <!--fresco:failureImage="@mipmap/zhanweitu"-->
        <!--fresco:failureImageScaleType="centerInside"-->
        <!--fresco:placeholderImage="@mipmap/zhanweitu"/>-->

        <ImageView
            android:id="@+id/imagePath"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_weight="0.09"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="0.72"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/font_ww_14"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="蒙牛特仑苏低脂牛奶 低脂优蛋白（规格:250ml*12盒）"
                android:textColor="@color/font_black2" />

            <TextView
                android:id="@+id/money"
                style="@style/font_ww_12"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:text="数量：2  金额：￥89.00"
                android:textColor="@color/font_black2" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>